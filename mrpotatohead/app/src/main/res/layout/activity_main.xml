<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:id="@+id/title"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/body"
                android:src="@mipmap/body"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/eyes"
                android:src="@mipmap/eyes"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/mouth"
                android:src="@mipmap/mouth"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/hat"
                android:src="@mipmap/hat"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/eyebrows"
                android:src="@mipmap/eyebrows"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/glasses"
                android:src="@mipmap/glasses"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/mustache"
                android:src="@mipmap/mustache"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/nose"
                android:src="@mipmap/nose"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/shoes"
                android:src="@mipmap/shoes"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/arms"
                android:src="@mipmap/arms"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/ears"
                android:src="@mipmap/ears"
                />


        </RelativeLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyes"
                android:id="@+id/checkEyes"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="onCheckingEyes"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ears"
                android:id="@+id/checkEars"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="onCheckingEars"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:id="@+id/checkShoes"
                android:layout_gravity="bottom"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="onCheckingShoes"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms"
                android:id="@+id/checkArms"
                android:layout_gravity="bottom"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="onCheckingArms"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouth"
                android:id="@+id/checkMouth"
                android:layout_gravity="bottom"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="onCheckingMouth"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyebrows"
                android:id="@+id/checkEyebrows"
                android:layout_gravity="bottom"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="onCheckingEyebrows"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasses"
                android:id="@+id/checkGlasses"
                android:layout_gravity="bottom"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="onCheckingGlasses"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hat"
                android:id="@+id/checkHat"
                android:layout_gravity="bottom"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="onCheckingHat"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mustache"
                android:id="@+id/checkMustache"
                android:layout_gravity="bottom"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="onCheckingMustache"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nose"
                android:id="@+id/checkNose"
                android:layout_gravity="bottom"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="onCheckingNose"
                />

        </GridLayout>

    </LinearLayout>

</LinearLayout>
